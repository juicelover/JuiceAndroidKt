<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--toolbar样式-->
    <style name="title_toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>
    <!--对话框动画效果：渐显-->
    <style name="dialogAlphaAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/alpha_in</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <!--对话框动画效果：无动画-->
    <style name="dialogNoAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>
    <style name="dialogBottomScaleAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>
    <!--EmptyLayout属性-->
    <declare-styleable name="EmptyLayout">
        <!--空Item文字提示-->
        <attr name="emptyHint" format="string" />
        <!--空Item文字提示颜色-->
        <attr name="emptyHintColor" format="color" />
        <!--空Item提示图片-->
        <attr name="emptyImg" format="reference" />
        <!--空Item背景颜色-->
        <attr name="emptyBgColor" format="color" />
        <!--空Item内容上边距-->
        <attr name="emptyContentMarginTop" format="dimension" />
        <!--空Item内容Padding-->
        <attr name="emptyContentPadding" format="dimension" />
    </declare-styleable>
</resources>